{{ header }}{{ column_left }} 
<div id="content">
 <div class="page-header">
  <div class="container-fluid">
    <h1>{{ heading_title }}</h1>
  </div>
</div>
<div class="container-fluid">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-service">
    <div class="form-group">
      <label for="input-name">{{ entry_name }}</label>
      <input type="text" name="name" value="{{ service_info.name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
    </div>
    <div class="form-group">
      <label for="input-description">{{ entry_description }}</label>
      <textarea name="description" rows="5" placeholder="{{ entry_description }}" id="input-description" data-toggle="summernote"  class="form-control">{{ service_info.description }}</textarea>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-4"> 
            <div class="form-group">
                <label for="input-price">{{ entry_price }}</label>
                <input type="text" name="price" value="{{ service_info.price }}" placeholder="{{ entry_price }}" id="input-price" class="form-control" />
            </div>
        </div>
        <div class="col-xs-12 col-md-4"> 
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-image">Загрузить фото</label>
                <div class="col-sm-10">
                    <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail">
                        <img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                    </a>
                    <input type="hidden" name="image" value="{{ image }}" id="input-image" />
                </div>
            </div> 
        </div>
        <div class="col-xs-12 col-md-4"> 
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-image">Загрузить прайс</label>
                <div class="col-sm-10">
                    <input type="file" name="file" />
                </div>
            </div>
        </div>
    </div>

    <!-- Добавление галереи -->
    <div class="form-group">
        <label class="col-sm-2 control-label" for="input-gallery">Загрузить фото для галереи</label>
        <div class="col-sm-10">
            <a href="" id="button-gallery" data-toggle="image" class="btn btn-primary"><i class="fa fa-plus-square"></i></a>
            <input type="hidden" name="gallery" value="{{ gallery }}" id="input-gallery">
        </div>
    </div>
    <div id="gallery-images" class="row">
        {% for gallery_image in gallery_images %}
            <div class="image">
                <img src="{{ gallery_image.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                <input type="hidden" name="product_image[{{ gallery_image.product_image_id }}][image]" value="{{ gallery_image.image }}" id="input-image{{ gallery_image.product_image_id }}" />
                <button type="button" onclick="$(this).parent().remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
            </div>
        {% endfor %}
    </div>

    <div class="form-group">
      <label for="input-meta-title">{{ entry_meta_title }}</label>
      <input type="text" name="meta_title" value="{{ service_info.meta_title }}" placeholder="{{ entry_meta_title }}" id="input-meta-title" class="form-control" />
    </div>
    <div class="form-group">
      <label for="input-meta-description">{{ entry_meta_description }}</label>
      <textarea name="meta_description" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description" class="form-control">{{ service_info.meta_description }}</textarea>
    </div>
    <button type="submit" form="form-service" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
  </form>
</div>
</div>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet">
<script src="view/javascript/summernote/summernote.js" type="text/javascript"></script>
<script type="text/javascript"><!--
$('#input-description').summernote({
    height: 300
});

$('#button-gallery').on('click', function() {
    var node = this;

    $('#modal-image').remove();

    $.ajax({
        url: 'index.php?route=common/filemanager&token={{ token }}&target=' + $(node).parent().find('input').attr('id') + '&thumb=' + $(node).attr('id'),
        dataType: 'html',
        beforeSend: function() {
            $(node).button('loading');
        },
        complete: function() {
            $(node).button('reset');
        },
        success: function(html) {
            $('body').append('<div id="modal-image" class="modal">' + html + '</div>');

            $('#modal-image').modal('show');
        }
    });

    $(node).parent().find('input').autocomplete({
        'source': function(request, response) {
            $.ajax({
                url: 'index.php?route=common/filemanager/autocomplete&token={{ token }}&filter_name=' + encodeURIComponent(request),
                dataType: 'json',
                success: function(json) {
                    response($.map(json, function(item) {
                        return {
                            label: item['name'],
                            value: item['path']
                        }
                    }));
                }
            });
        },
        'select': function(item) {
            $(node).parent().find('input').val(item['value']);
        }
    });

    return false;
});

//--></script>
