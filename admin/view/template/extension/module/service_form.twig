{{ header }}{{ column_left }} 
<div id="content">
 <div class="page-header">
  <div class="container-fluid">
    <h1>{{ heading_title }}</h1>
  </div>
</div>
<div class="container-fluid">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-service">
    <div class="form-group">
      <label for="input-name">{{ entry_name }}</label>
      <input type="text" name="name" value="{{ service_info.name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
    </div>
    <div class="form-group">
      <label for="input-description">{{ entry_description }}</label>
      <textarea name="description" rows="5" placeholder="{{ entry_description }}" id="input-description" data-toggle="summernote"  class="form-control">{{ service_info.description }}</textarea>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-4"> <div class="form-group">
      <label for="input-price">{{ entry_price }}</label>
      <input type="text" name="price" value="{{ service_info.price }}" placeholder="{{ entry_price }}" id="input-price" class="form-control" />
    </div></div>
        <div class="col-xs-12 col-md-4"> <div class="form-group">
    <label class="col-sm-2 control-label" for="input-image">Загрузить фото</label>
    <div class="col-sm-10">
        <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail">
            <img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" />
        </a>
        <input type="hidden" name="image" value="{{ image }}" id="input-image" />
    </div>
</div> </div>
        <div class="col-xs-12 col-md-4"> <div class="form-group">
    <label class="col-sm-2 control-label" for="input-image">Загрузить прайс</label>
    <div class="col-sm-10">
       <input type="file" name="file" />
    </div>
</div></div>
    </div>
   
  
  
    <div class="form-group">
      <label for="input-meta-title">{{ entry_meta_title }}</label>
      <input type="text" name="meta_title" value="{{ service_info.meta_title }}" placeholder="{{ entry_meta_title }}" id="input-meta-title" class="form-control" />
    </div>
    <div class="form-group">
      <label for="input-meta-description">{{ entry_meta_description }}</label>
      <textarea name="meta_description" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description" class="form-control">{{ service_info.meta_description }}</textarea>
    </div>
    <button type="submit" form="form-service" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
  </form>
</div>
</div>
