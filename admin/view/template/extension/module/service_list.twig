{{ header }}{{ column_left }} 
{% block content %}
<div id="content">
<div class="page-header">
  <div class="container-fluid">
    <h1>{{ heading_title }}</h1>
    <div class="pull-right">
      <a href="{{ add }}" class="btn btn-primary"><i class="fa fa-plus"></i> Добавить услугу</a>
    </div>
  </div>
</div>
<div class="container-fluid">
 
 
 <div class="table-responsive">
  <table class="table table-striped table-hover table-bordered table-sm ">
    <thead>
      <tr>
      
        <th scope="col">Название</th>
        <th scope="col">Цена</th>
        <th scope="col">Действие</th>
      </tr>
    </thead>
    <tbody>
       {% for service in services %}
      <tr>
      
        <td>{{ service.name }}</td>
        <td> {{ service.price }}</td>
        <td>  <a href="{{ service.edit }}" class="btn btn-info pull-right"><i class="fa fa-pencil"></i> Редактировать</a>
          <a href="{{ service.delete }}" class="btn btn-danger pull-right"><i class="fa fa-trash"></i>Удалить</a></td>
      
      </tr>
      {% endfor %}
     
    </tbody>

  </table>
</div>
 
 
 
 
 
 
 

</div>
</div>
{% endblock %}
{{ footer }} 