{% extends 'common/header.twig' %}

{% block content %}
<h1>{{ heading_title }}</h1>

{% for service in services %}
    <div>
        <h2><a href="{{ service.href }}">{{ service.name }}</a></h2>
        <p>{{ service.description }}</p>
        <p>Price: {{ service.price }}</p>
        <img src="{{ service.image }}" alt="{{ service.name }}">
    </div>
{% endfor %}
{% endblock %}
