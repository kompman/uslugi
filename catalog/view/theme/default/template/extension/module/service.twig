{{ header }}

{% block content %}
<div class="container">
  <div class="row">
      <div class="col">
             <h1>{{ heading_title }}</h1>
      </div>
  </div>

<div class="row">
    {% for service in services %}
    <div class="col-xs-12 col-md-3">
        
<div class="card" style="">
  <img class="card-img-top" src="{{ service.image }}" alt="{{ service.name }}">
  <div class="card-body">
    <h5 class="card-title">{{ service.name }}</h5>
    <p class="card-text">{{ service.description|slice(0, 220) ~ '...' }}</p>
    <a href="{{ service.href }}" class="btn btn-primary">Подробнее</a>
  </div>
</div>

    </div>
     {% endfor %} 
</div>

</div>




{% endblock %}
{{ footer }} 
